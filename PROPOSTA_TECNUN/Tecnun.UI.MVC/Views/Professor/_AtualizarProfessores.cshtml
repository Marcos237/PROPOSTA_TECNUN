@model Tecnun.Applications.Model.ProfessorViewModel

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">
        <span aria-hidden="true">×</span><span class="sr-only">Close</span>
    </button>
    <h4 class="modal-title">Atualizar Professor</h4>
</div>

<div class="modal-body">
    @using (Html.BeginForm())
    {

        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            @Html.Hidden("ProfessorId", (Guid?)ViewBag.ProfessorId)
            @Html.Hidden("CPF", (string)ViewBag.CPF)
            @Html.Partial("_ProfessorEditar")

            <div class="modal-footer">
                <input type="submit" value="Atualizar" class="btn btn-success" />
                <input type="button" class="btn btn-danger" data-dismiss="modal" value="Fechar" />
            </div>
        </div>
    }
</div>


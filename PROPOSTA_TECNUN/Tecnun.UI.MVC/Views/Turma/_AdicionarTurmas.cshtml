@model Tecnun.Applications.Model.TurmaViewModel

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">
        <span aria-hidden="true">×</span><span class="sr-only">Close</span>
    </button>
    <h4 class="modal-title">Nova Turma</h4>
</div>

<div class="form-group-sm">
    @Html.Partial("_ErrorSummary")
</div>
<div class="modal-body">
    @using (Html.BeginForm())
    {

        @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.HiddenFor(model => model.PeriodoTurma, new { id = "_periodoturma" })
        @Html.HiddenFor(model => model.ProfessorId, new { id = "_professorid" })
        @Html.Hidden("ProfessorId", (string)ViewBag.ProfessorId)
        @Html.Hidden("Nome", (string)ViewBag.Nome)
        @Html.Partial("_Turma")

        <div class="modal-footer">
            <input type="submit" value="Adicionar" class="btn btn-success" id="_turmaid" />
            <input type="button" class="btn btn-danger" data-dismiss="modal" value="Fechar" />
        </div>
    </div>
    }
</div>

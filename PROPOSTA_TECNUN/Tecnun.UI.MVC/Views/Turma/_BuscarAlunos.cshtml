@model IEnumerable<Tecnun.Applications.Model.AlunoViewModel>

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">
        <span aria-hidden="true">×</span><span class="sr-only">Close</span>
    </button>
    <h4 class="modal-title">Alunos</h4>
</div>

<div class="modal-body">
    @using (Html.BeginForm())
    {

        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            @Html.Hidden("TurmaId", (Guid?)ViewBag.TurmaId)
            @Html.Partial("_ListarAlunos")

            <div class="modal-footer">
                <input type="button" class="btn btn-danger" data-dismiss="modal" value="Fechar" />
            </div>
        </div>
    }
</div>

@model Tecnun.Applications.Model.AlunoViewModel

<div class="modal-header">

    <h4 class="modal-title">Tem certeza que deseja excluir este aluno?</h4>
    <button type="button" class="close" data-dismiss="modal">
        <span aria-hidden="true">×</span><span class="sr-only">Close</span>
    </button>

</div>

<div class="modal-body">
    <div class="form-horizontal">

        @Html.Partial("_DadosAluno")

        @using (Html.BeginForm("DeletarAluno", "Home", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="modal-footer">
                <input type="submit" value="Sim" class="btn btn-danger" />
                <input type="button" class="btn btn-success" data-dismiss="modal" value="Não" />
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}